<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">      <!-- 白边透明底圆角 -->
    <corners android:radius="30dip"/>   <!-- 设置圆角弧度 -->
    <solid android:color="@android:color/transparent" />   <!-- 内置填充色 -->
    <stroke android:width="1dp" android:color="#FFFFFF" /> <!-- 设置边框颜色 -->
    <padding
        android:left="30dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" /><!-- 设置边框与文字距离 -->
</shape>