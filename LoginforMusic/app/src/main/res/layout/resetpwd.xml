<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register"
    android:background="#FFFFFF">


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <TextView
            android:id="@+id/pwdTV2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:textSize="20dp"
            android:text="密码"/>

        <EditText
            android:id="@+id/pwdET2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/pwdTV2"
            android:layout_toRightOf="@+id/pwdTV2"
            android:background="@drawable/shape3"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/confirmTV2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pwdTV2"
            android:layout_marginTop="70dp"
            android:textSize="20dp"
            android:text="确认密码"/>

        <EditText
            android:id="@+id/confirmET2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pwdTV2"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/pwdTV2"
            android:layout_toRightOf="@+id/pwdTV2"
            android:background="@drawable/shape3"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/phoneTV2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/confirmET2"
            android:layout_marginTop="70dp"
            android:textSize="20dp"
            android:text="手机号"/>

        <EditText
            android:id="@+id/phoneET2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/confirmET2"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/pwdTV2"
            android:layout_toRightOf="@+id/pwdTV2"
            android:background="@drawable/shape3"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/VercodeTV2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/phoneTV2"
            android:layout_marginTop="70dp"
            android:textSize="20dp"
            android:text="验证码"/>

        <EditText
            android:id="@+id/VercodeET2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/phoneTV2"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/pwdTV2"
            android:layout_toRightOf="@+id/pwdTV2"
            android:background="@drawable/shape3"
            android:textSize="16dp" />

        <Button
            android:id="@+id/getVercodeBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/VercodeET2"
            android:layout_marginTop="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/shape3"
            android:text="获取验证码" />

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/VercodeET2"
            android:layout_marginTop="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/shape4"
            android:text="重设密码" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/ibtm_back_reset"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/back" />


</RelativeLayout>